@model Attractions
<h2>Edit Attraction</h2>
<br />

@if (Model != null)
{
    <form action="/Edit/@Model.Id" method="post">
        <label>Name:</label>
        <input type="text" name="AttrName" value="@Model.AttrName" /><br />
        <label>City:</label>
        <input type="text" name="City" value="@Model.City" /><br />
        <label>Price:</label>
        <input type="number" name="Price" value="@Model.Price" /><br />
        <label>Longitude:</label>
        <input type="number" name="Longitude" value="@Model.Longitude" /><br />
        <label>Lattitude:</label>
        <input type="number" name="Lattitude" value="@Model.Lattitude" /><br />
        <label>Category:</label>
        <input type="text" name="Category" value="@Model.Category" /><br />
        <label>Duration:</label>
        <input type="number" name="Duration" value="@Model.Duration" /><br />
        <label>Recommended age:</label>
        <input type="number" name="RecommendedAge" value="@Model.RecommendedAge" /><br />
        <input type="number" name="Id" value="@Model.Id" hidden />
        <button type="submit">Save Changes</button>
    </form>
}
else
{
    <p>There is no such element</p>
}

